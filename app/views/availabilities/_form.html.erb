  </div>

  <div class="field">
    <%= f.label :start_time, 'Time(From) :' %><br />
    <%= time_field(:availability, :start_time) %>
  </div>

  <div class="field">
    <%= f.label :end_time, 'Time(To) :' %><br />
    <%= time_field(:availability, :end_time) %>
  </div>

  <div class="field">
    <%= f.label :start_time, 'Date(From) :' %><br />
    <%= date_field(:availability, :start_date) %>
  </div>

  <div class="field">
    <%= f.label :start_time, 'Date(To) :' %><br />
    <%= date_field(:availability, :end_date) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>