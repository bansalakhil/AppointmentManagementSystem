<%= form_for (@availability), html: { :'data-remote' => true } do |f| %>
  <% if @availability.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@availability.errors.count, "error") %> prohibited
      this availability from being saved:</h2>
