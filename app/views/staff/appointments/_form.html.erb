
<%= form_for(@appointment ||= Appointment.new, url: staff_appointments_path(@appointment), html: { :'data-remote' => true, id: 'event_form' } ) do |f| %>

<div class="field">
  <%= f.label :staff_id, 'Staff :' %><br />
  <%= f.collection_select(:staff_id, @staffs, :id, :name) %>
</div>

<div class="field">
  <%= f.label :service_id, 'Services :' %><br />
  <%= f.collection_select(:service_id, @services, :id, :name) %>
</div>

<div class="field">
  <%= f.label :customer_id, 'Customer :' %><br />
  <%= f.collection_select(:customer_id, @customers, :id, :name) %>
</div>
<p>
  <%=f.label :description %>
  <br/>
  <%=f.text_area :description, :rows => 4, :cols => 30 %>
</p>
<p>
  <%=f.label :starttime, 'Start Time' %>
  <br/>
  <%=f.datetime_select :starttime %>
</p>
<p>
  <%=f.label :endtime, 'End Time' %>
  <br/>
  <%=f.datetime_select :endtime %>
</p>
<p>
  <%=f.submit %>
  <span id = "creating_events" class="spinner" style = "display:none;">Creating, Please wait...</span>
</p>
<%end %>