<%= link_to 'Home' , welcome_path %>
<br />

<h2>Customers</h2>

<%= link_to 'New Customer', new_admin_customer_path, class: 'new-customer-link', remote: true %><br /><br />

<table border = '2' width = '700'>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <!--<th>Appointments</th>-->
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @customers.each do |customer| %>
    
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td class="list_description">
        <%= customer.name %>
      </td>

      <td class="list_description">
        <%= customer.email %>
      </td>
      
      <td class="list_actions">
        <% if customer.active %>
          <%= link_to 'Edit', edit_admin_customer_path(customer), remote: true %>
        <% else %>
          NA
        <% end %>
      </td>

      <td class="list_actions">
        <% if customer.active %>
          <%= link_to 'Delete', admin_customer_path(customer), method: :delete, data: { confirm: 'Are you sure?' } %>
        <% else %>
          NA
        <% end %>
      </td>

    </tr>
  <% end %>

</table>
<br/>
<%= will_paginate @customers %>
<br/>

