<br />
<%= link_to 'Home' , welcome_path %>
<br />

<h2>STAFF</h2>

<%= link_to 'New Staff', new_admin_staff_path, class: 'new-staff-link', remote: true %><br /><br />

<table border = '2' width = '700'>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Services</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @staffs.each do |staff| %>
    
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td class="list_description">
        <%= staff.name %>
      </td>

      <td class="list_description">
        <%= staff.email %>
      </td>

      <td class='list_actions'>
        <%= ((staff.services).map{|service| service.name}).join(',') %>
      </td>

      <td class="list_actions">
        <% if staff.active %>
          <%= link_to 'Edit', edit_admin_staff_path(staff), remote: true %>
        <% else %>
          NA
        <% end %>
      </td>

      <td>
        <% if staff.active %>
          <%= link_to 'Delete', deactivate_admin_staff_path(staff), method: :put, data: { confirm: 'Are you sure?' } %>
        <% else %>
          NA
        <% end %>
      </td>

    </tr>
  <% end %>

</table>
<br/>
<%= will_paginate @staffs %>
<br/>

<div id = 'form_render'>
</div>
