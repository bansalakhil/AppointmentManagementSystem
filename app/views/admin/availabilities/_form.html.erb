<%= form_for [:admin, @availability], html: { :'data-remote' => true } do |f| %>
  <% if @availability.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @availability.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :staff_id, 'Staff :' %><br />
    <%= f.collection_select(:staff_id, @staff, :id, :name, {:prompt => 'Select'}) %>
  </div>

  <div class="field">
    <%= f.label :service_id, 'Service :' %><br />
    <%= f.collection_select(:service_id, @services || [], :id, :name, {:prompt => 'Select'}) %>
    <%#= f.collection_select(:service_id, @services || [], :id, :name, { name: 'availability[service_ids][]'}, multiple: true) %>
  </div>

  <div class="field">
    <%= f.label :start_time, 'Date(From) :' %><br />
    <%= date_field(:availability, :start_date) %> 
  </div>

  <div class="field">
    <%= f.label :start_time, 'Date(To) :' %><br />
    <%= date_field(:availability, :end_date) %>
  </div>

  <div class="field">
    <%= f.label :start_time, 'Time(From) :' %><br />
    <%= time_field(:availability, :start_time) %>
  </div>

  <div class="field">
    <%= f.label :end_time, 'Time(To) :' %><br />
    <%= time_field(:availability, :end_time) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>