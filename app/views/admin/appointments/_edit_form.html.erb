<%= form_for [:admin, @event], :html => { :id => 'appointment_form' } do |f| %>

<div class="field">
  <%= f.label :staff_id, 'Staff :' %><br />
  <%= f.collection_select(:staff_id, @staffs, :id, :name) %>
</div>

<div class="field">
  <%= f.label :service_id, 'Services :' %><br />
  <%= f.collection_select(:service_id, @services, :id, :name) %>
</div>
<p>
  <%=f.label :description %>
  <br/>
  <%=f.text_area :description, :rows => 4, :cols => 30 %>
</p>
<p>
  <%=f.label :starttime, 'Start Time' %>
  <br/>
  <%=f.datetime_select :starttime %>
</p>
<p>
  <%=f.label :endtime, 'End Time' %>
  <br/>
  <%=f.datetime_select :endtime %>
</p>
<p>
  <%=f.label :remark, 'Remark' %>
  <br/>
  <%=f.text_field :remark %>
</p>

<p>
<%=f.submit 'Update', :onclick => "document.getElementById('event_commit_button').value = this.value"%>
<span id = "updating_events" class="spinner" style = "display:none;">Updating, Please wait...</span>
</p>
<%end %>