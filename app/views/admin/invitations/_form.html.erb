
<%= form_for [:admin, @invitation], html: { :'data-remote' => true } do |f| %>
  <% if @invitation.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @invitation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, 'Name :' %><br />
    <%= f.text_field :name %>
  </div>
  <%= f.hidden_field :invitee_type, value: @invitation.invitee_type %>

  <div>
    <%= f.label :email, 'Email :' %><br />
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :phone_number, 'Phone Number : ' %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>