<%= form_for [:customer, @service], html: { :'data-remote' => true }  do |f| %>
<% if @service.errors.any? %>
<div id="error_explanation">
    <ul>
      <% @service.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Name :' %><br />
    <%= f.text_field :name, value: @service.name %>
  </div>

  <div class="field">
    <%= f.label :slot_window, 'Slot Duration :' %><br />
    <%= f.select(:slot_window, [['15 mins', 15], ['30 mins', 30], ['45 mins', 45], ['60 mins', 60]]) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

  <% end %>