
<h1>SERVICES</h1>

<table border = '2' width = '500'>
  <tr>
    <th>Service Name</th>
    <th>Duration</th>
  </tr>

  <% @services.each do |service| %>
    
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td class="list_description">
        <%= service.name %>
      </td>
      <td class="list_description">
        <%= service.slot_window %>
      </td>
    </tr>
  <% end %>

</table>
