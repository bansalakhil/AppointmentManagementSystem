<%= form_for @staff do |f| %>
  <% if @staff.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@staff.errors.count, "error") %> prohibited
        this staff from being saved:</h2>
      <ul>
      <% @staff.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, 'Staff Member\'s name :' %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :designation, 'Designation :' %><br />
    <%= f.text_field :designation %><br/>
  </div>

  <div>
    <%= f.label :email, 'Staff\'s Email :' %><br />
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :address, 'Staff\'s Address :' %><br />
    <%= f.text_area :address %>
  </div>

  <div>
    <%= f.label :phone_number, 'Staff\'s Phone Number :' %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div>
    <%= f.label :services, 'Services :' %><br />
    <%= f.collection_select('service_ids', @services, :id, :name,{name: 'staff[service_ids][]'}, multiple: true) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>