<!DOCTYPE html>
<html>
  <head>
    <title>AppointmentManagementSystem</title>
    <%= stylesheet_link_tag 'application', media: 'all'%>
    <%= yield :moment_calendar_js %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body class = '<%= controller.controller_name %>' style = 'background: url("<%= current_layout.background(:full) %>")'>
    <div id="banner">
      <%= image_tag (current_layout.logo) %>
      Appointment Management System
    </div>
    <div id="columns">
      <div id="side">
        <ul>
          <li><a href="http://www...."><%= t('.home') %></a></li>
          <li><a href="http://www..../faq"><%= t('.questions') %></a></li>
          <li><a href="http://www..../news"><%= t('.news') %></a></li>
          <li><a href="http://www..../contact"><%= t('.contact') %></a></li>
        </ul>
      </div>
      <div id="main" >
        <% if user_signed_in? %>
          Logged in as <strong><%= current_user.email %></strong>.
          <%= link_to 'Sign Out', destroy_user_session_path, :method => 'delete' %>
        <% end %>
        <% flash.each do |key, value| %>
          <%= content_tag :div, value %>
        <% end %>
        <div>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
